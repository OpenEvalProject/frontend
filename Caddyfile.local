:3000 {
    # Handle API requests - proxy to backend
    handle /api/* {
        reverse_proxy 127.0.0.1:8000
    }

    handle /auth/* {
        reverse_proxy 127.0.0.1:8000
    }

    # Handle everything else as static files
    handle {
        root * .
        try_files {path} {path}/ /index.html
        file_server
    }
}
